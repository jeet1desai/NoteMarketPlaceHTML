@model NoteMarketPlace.Models.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- meta data -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- title -->
    <title>Note - Login</title>

    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700;800&display=swap"
          rel="stylesheet">

    <!-- font-awesome -->
    <link rel="stylesheet" href="~/Content/Client/font-awesome/css/font-awesome.min.css">

    <!-- bootstrap css -->
    <link rel="stylesheet" href="~/Content/Client/bootstrap/bootstrap.min.css">

    <!-- css -->
    <link rel="stylesheet" href="~/Content/Client/style.css">

    <!-- Responsive Css -->
    <link rel="stylesheet" href="~/Content/Client/responsive.css">

    
</head>

<body>

    <section id="login">
        <div class="box">
            <div class="logo">
                <div class="text-center">
                    <img src="~/Content/Client/images/Login/top-logo.png" alt="">
                </div>
            </div>
            <div class="form-content">
                <div class="login-heading">
                    <h3 class="text-center">Login</h3>
                    <p class="text-center">Enter your details to LogIn</p>
                </div>

                @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                {
                    @Html.AntiForgeryToken();

                    <!-- email -->
                    <div class="form-group">
                        <label for="Email">Email *</label>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", id = "Email", placeholder = "Enter your email", type = "email", required = "required" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>

                    <!-- password -->
                    <div class="form-group">

                        <div class="pass-and-forgpass">
                            <label for="Password">Password *</label>
                            <a href="@Url.Action("Index","ForgetPassword")" class="text-right">Forgot Password ?</a>
                        </div>

                        <div class="password-input">
                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", id = "Password", placeholder = "Enter your password", type = "password", required = "required" })
                            <span toggle="#Password" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>

                    </div>

                    <!-- remember me -->
                    <div class="form-group form-check">
                        @Html.CheckBoxFor(model => model.IsSelected, new { @class = "form-check-input", id = "checkBox", type = "checkbox" })
                        @*<input type="checkbox" class="form-check-input" id="exampleCheck1">*@
                        <label class="form-check-label" for="checkBox"> Remember Me</label>
                    </div>

                    <!-- login btn -->
                    <button type="submit" class="btn login-btn">Login</button>

                    <!-- signup -->
                    <p class="text-center sign-up-text">
                        Don't have an account? <a href="@Url.Action("Index","Signup")">Sign Up</a>
                    </p>
                }
            </div>

        </div>
    </section>



    <!-- JavaScript -->
    <!-- JQuery -->
    <script src="~/Scripts/Client/jquery.js"></script>

    <!-- bootstrap javaScript -->
    <script src="~/Scripts/Client/bootstrap/bootstrap.min.js"></script>

    <!-- javaScript -->
    <script src="~/Scripts/Client/script.js"></script>

</body>

</html>

