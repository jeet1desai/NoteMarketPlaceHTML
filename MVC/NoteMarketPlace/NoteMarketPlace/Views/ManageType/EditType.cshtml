@model NoteMarketPlace.Models.NoteType
@{
    ViewBag.Title = "Note - EditType " + Model.Name;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Add Type -->
<section id="addtype">
    <div class="content-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <div class="title">
                        <p>Edit Type</p>
                    </div>
                    <div class="form-div">
                        @using (Html.BeginForm("EditType", "ManageType", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.HiddenFor(model => model.ID)
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label for="type">Type *</label>
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", id = "type", placeholder = "Enter Your Type Name", type = "text", required = "required" })
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>

                            <div class="form-group">
                                <label for="description">Description *</label>
                                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", id = "description", placeholder = "Enter your Description..", required = "required" })
                                @Html.ValidationMessageFor(model => model.Description)
                            </div>

                            <div id="btn-purple">
                                <button type="submit" value="Submit" class="btn">SUBMIT</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

