@model NoteMarketPlace.Models.NoteCategory

@{
    ViewBag.Title = "Note - Add Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Add Category -->
<section id="addcategory">
    <div class="content-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <div class="title">
                        <p>Add Category</p>
                    </div>
                    <p class="text-danger">@ViewBag.Error</p>
                    <div class="form-div">
                        @using (Html.BeginForm("AddCategory", "ManageCategory", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label for="category">Category Name *</label>
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", id = "category", placeholder = "Enter Your Category Name", type = "text", required = "required" })
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>

                            <div class="form-group">
                                <label for="description">Description *</label>
                                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", id = "description", placeholder = "Enter your Description..", required = "required" })
                                @Html.ValidationMessageFor(model => model.Description)
                            </div>

                            <div id="btn-purple">
                                <button type="submit" value="Submit" class="btn">SUBMIT</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

